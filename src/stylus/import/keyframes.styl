@keyframes shrink
	0%
		transform scale(1, 1)	
	25%
		transform scale(0.7, 0.7)	
	50%
		transform scale(1, 1)	
	75%
		transform scale(0.7, 0.7)	
	100%
		transform scale(1, 1)

@keyframes grow
	0%
		transform scale(1, 1)	
	25%
		transform scale(1.2, 1.2)	
	50%
		transform scale(1, 1)	
	75%
		transform scale(1.2, 1.2)	
	100%
		transform scale(1, 1)	