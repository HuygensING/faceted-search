.faceted-search
	.text-search
		header
			h3
				padding 0
				margin 0
				width calc(100% - 60px)
				overflow: hidden
				text-overflow: ellipsis

		.search-input
			input
				box-sizing border-box
				border-right 0
				border-bottom-left-radius 3px
				border-top-left-radius 3px
				width 85%
				height 30px
				border 1px solid #DDD
				margin 0
				padding-left 8px
				font-size 1.2em

			div.search-icon
				width 30px
				height 30px
				display inline-block
				background-image embedurl('../svg/search.svg')
				background-repeat: no-repeat
				background-size: 20px
				background-position: center
				background-color #CCC
				border-bottom-right-radius 3px
				border-top-right-radius 3px
				line-height 30px
				text-align center
				vertical-align top
				width 15%
				cursor pointer