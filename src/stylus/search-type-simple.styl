.faceted-search.search-type-simple, .faceted-search.search-type-advanced
	border none
	background none

	form
		box-shadow none

		.text-search
			position relative
			box-shadow none
			background none

			.pad3
				padding 0 3%

			header
				// i.openclose
				// 	position absolute
				// 	left -8px
				// 	top 9px
				// 	color #DDD

				// 	&:hover, &.active
				// 		color #AAA

			.body
				
				.menu
					margin-bottom 18px
					display none

					&:hover
						i.fa-times
							opacity 1

					i.fa-times
						opacity 0
						float right
						margin-right 2px
						font-size 1.4em
						transition opacity 500ms

				.row-1, .row-2
					margin 10px 0 0 2px

					.cell-1, .cell-2
						display inline-block
						vertical-align top

					.cell-1
						width 120px

				label
					font-size 0.9em

				input[type="checkbox"]
					margin-right 4px

				ul.textlayers, ul.searchins
					margin-top 6px
					list-style none
			
				input[name="search"]
					height 24px

.faceted-search.search-type-advanced
	form
		.text-search ul li
			span.advanced:after
				content ' advanced search'

		ul.menu
			li
				&.collapse-expand, &.reset
					display block

				&.switch
					span.advanced:after
						content ' simple search'

.faceted-search.search-type-simple
	form
		ul.menu
			li
				&.collapse-expand, &.reset
					display none

				&.switch
					span.advanced:after
						content ' advanced search'

		.facets
			display none
			