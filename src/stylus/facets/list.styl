.facet.list
	header

		input[name="dummy"]
			width 24px
			margin-left 10px
			height 11px
			padding 0 0 0 4px

		.options
			*
				vertical-align middle

			input, small
				display inline-block

			input[name="all"]
				visibility hidden

			input[name="filter"]
				width 120px
				margin-left 2px
				padding-left 2px

				&.nonefound
					color #D10000

			small.optioncount
				margin-left 8px

	.body
		.container
			max-height inherit
			overflow-y auto
			overflow-x hidden

			li
				&.checked
					i.checked
						inline-block()
						
					i.unchecked
						display none
						
				i.checked
					display none
					
				i.unchecked
					inline-block()
					padding-right 3px
					



