.faceted-search
	
	.facet
		header
			margin-bottom 10px

			h3
				padding 0
				margin 0
				display inline
				cursor pointer

			svg
				float right
				cursor pointer

				&.active
					rect.vertical
						display none		

			.options
				display none
				background-color darken(backgroundcolor, 5%)
				padding 2%
				margin-top 10px
				box-shadow 1px 1px 4px #BDBDBD
				border-radius 4px

				h4
					margin-top 12px

				small.optioncount
					margin-left 8px

		.body
			ul
				max-height 200px
				overflow auto
				list-style none

				li
					white-space nowrap

					[data-count="0"]
						label
							color lighten(#555, 50%)
						.count
							color lighten(#555, 80%)

					label, .count
						color #555

					input[type="checkbox"], label
						white-space normal
						margin 0
						display inline-block

					input[type="checkbox"]
						margin-top 2px

					label
						padding 0 4px

					:checked + label
						color #000