@import 'nib'

spotcolor = #46aaa8
spotcolor2 = #FFBEFC

.faceted-search-results
	position absolute
	top 120px
	left 0
	right 0
	bottom 0
	overflow hidden

	.submenu
		box-shadow 0 12px 12px #FFF

		li[data-key="publish"]
			&.active
				padding-right 24px

				&:after
					position absolute
					top 3px
					right 5px
					content url('/images/loader_transparent.gif')

	.faceted-search-placeholder
		position absolute
		left 0
		top 0
		bottom 0
		padding 0 20px 20px 20px
		overflow-y auto
		width 300px

		.faceted-search
			.facets
				margin-top 20px

				.loader
					h4
						font-size 14px
						display inline
						margin-right 10px

				.facet
					header
						i.fa
							font-size 1em