include ../../../../../jade/svg-icons.jade

- var displayName = option.id
- var emptyValues = ["", ":empty", "(empty)"]

if emptyValues.indexOf(option.id) > -1
	- displayName = '<em>(empty)</em>'

if option.get('displayName') != null
	- displayName = option.get('displayName')


li(data-count=option.get('count'), data-value=option.id, class=option.get('checked')?'checked':null)
	+unchecked-icon
	+checked-icon
	//- i.unchecked.fa.fa-square-o(data-value=option.id)
	//- i.checked.fa.fa-check-square-o(data-value=option.id)
	label(data-value=option.id)!= displayName
	.count= option.get('count') === 0 ? option.get('total') : option.get('count')