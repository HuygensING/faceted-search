ul
	each option in options
		- randomId = generateID();

		li.option
			.row.span6(data-count=option.get('count'))
				.cell.span5
					input(id=randomId, name=randomId, type="checkbox", data-value=option.id, checked=option.get('checked')?true:false)
					label(for=randomId)!= option.id === ':empty' ? '<i>(empty)</i>' : option.id
				.cell.span1.alignright
					.count= option.get('count') === 0 ? option.get('total') : option.get('count')